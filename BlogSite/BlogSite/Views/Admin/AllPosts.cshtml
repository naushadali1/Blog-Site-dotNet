@model IEnumerable<Post>
<h1 class="text-center">All Posts </h1>
<table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tittle</th>
                <th scope="col">Date</th>
                <th scope="col" colspan=2>Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var item in Model)
            {
            
        <tr>
               
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Date</td>
                <td>
                    <a class="btn btn-primary" asp-action="UpdatePost" asp-controller="Admin" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                <a class="btn  btn-danger" asp-action="DeletePost" asp-controller="Admin" asp-route-id="@item.Id">Delete</a>
                </td>
               
            </tr>
            }
        </tbody>
    
</table>
