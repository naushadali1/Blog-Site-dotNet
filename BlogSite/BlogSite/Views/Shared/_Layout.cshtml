
@{
    IEnumerable<Post> myPost =  ViewBag.Post;
   Profile myProfile = ViewBag.Profile;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Ali Blogs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogSite.styles.css" asp-append-version="true" />
</head>
    <body class="bg-light">
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
           
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="home" asp-action="index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="index" asp-controller="admin">Admin Pannel</a>
                    </li>
                </ul>
                <form class="d-flex" method="post" role="search" asp-action="index" asp-controller="home">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="searchquery">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
        <!-- Container -->
        <div class="container">
            <!-- Header -->
            <header class="text-center py-4">
                <h1><b>Naushad Blogs</b></h1>
                <p>
                    Welcome to the blog of <span class="badge bg-secondary">Naushad Ali</span>
                </p>
            </header>

            <!-- Grid -->
            <div class="row">
                <!-- Blog Entries -->

                @RenderBody()
                

                <!-- Sidebar -->
                <div class="col-lg-4 col-md-12">
                    <!-- About Card -->
                    <div class="card mb-4 ">
                        <img src="~/Images/@myProfile.Image"
                             class="card-img-top rounded-3"
                             alt="Avatar" />
                        <div class="card-body">
                            <h4 class="card-title"><b>@myProfile.Name</b></h4>
                            <p class="card-text">
                                @myProfile.Bio
                            </p>
                        </div>
                    </div>

                    <!-- Popular Posts -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Popular Posts</h4>
                        </div>
                       
                        
                       
                        <ul class="list-group list-group-flush">
                        @foreach (var item in myPost)
                            {
                            <li class="list-group-item d-flex align-items-center">
                                <img src="~/Images/@item.Image"
                                     alt="Image"
                                     class="me-3"
                                     style="width: 50px" />
                                <div>
                                    <div class="fw-bold">@item.Title</div>
                                    <div>@item.Subtitle</div>
                                </div>
                            </li>
                            }
                        </ul>
                    </div>

                    <!-- Tags -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Tags</h4>
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-wrap">
                                <span class="badge bg-dark me-2 mb-2">Travel</span>
                                <span class="badge bg-light text-dark me-2 mb-2">New York</span>
                                <span class="badge bg-light text-dark me-2 mb-2">London</span>
                                <span class="badge bg-light text-dark me-2 mb-2">IKEA</span>
                                <span class="badge bg-light text-dark me-2 mb-2">NORWAY</span>
                                <span class="badge bg-light text-dark me-2 mb-2">DIY</span>
                                <span class="badge bg-light text-dark me-2 mb-2">Ideas</span>
                                <span class="badge bg-light text-dark me-2 mb-2">Baby</span>
                                <span class="badge bg-light text-dark me-2 mb-2">Family</span>
                                <span class="badge bg-light text-dark me-2 mb-2">News</span>
                                <span class="badge bg-light text-dark me-2 mb-2">Clothing</span>
                                <span class="badge bg-light text-dark me-2 mb-2">Shopping</span>
                                <span class="badge bg-light text-dark me-2 mb-2">Sports</span>
                                <span class="badge bg-light text-dark me-2 mb-2">Games</span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Sidebar -->
            </div>
            <!-- End Grid -->
        </div>
        <!-- End Container -->

        <!-- Footer -->

        <footer class="bg-dark text-white text-center py-3 mt-4">
            <button class="btn btn-secondary me-2" disabled>Previous</button>
            <button class="btn btn-secondary">Next »</button>
            <p class="mt-3">
                Created by Naushad Ali
            </p>
        </footer>

        
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>sssss
</html>
